<footer>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class=" page-item" >
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=1"
                   aria-label="Previous" style="background-color: #4469C1">
                    <span aria-hidden="true"><i class="bi bi-chevron-double-left" style="color:white"></i></span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="@ViewBag.PaginationBaseUrl=@i" style="background-color: #4469C1; color:white">@(i)</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link"
                   href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next" style="background-color: #4469C1">
                    <span aria-hidden="true"><i class="bi bi-chevron-double-right" style="color:white"></i></span>
                </a>
            </li>
        </ul>
    </nav>
</footer>