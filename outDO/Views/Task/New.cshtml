@model outDO.Models.Task
<div class="">
    <h1>Add task</h1>
    <form asp-controller="Task" asp-action="New" 
    class="d-flex flex-column justify-content-center align-content-center col-3">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <input type="hidden" asp-for="Id" value="id" />
        <input type="hidden" asp-for="BoardId" value="@ViewBag.BoardId" />
        <input type="hidden" asp-for="Status" value="status" />
        <div class="form-floating mb-3 col-mb">
            <input asp-for="Title" placeholder="Task Title" class="form-control"/>
            <label asp-for="Title">Task Title</label>
        </div>

        <div class="form-floating mb-3 col-mb">
            <textarea asp-for="Description" placeholder="Description" class="form-control"></textarea>
            <label asp-for="Description">Description</label>
        </div>
        <div class="form-row">
            <div class="form-group mb-3">
            <label asp-for="DateStart" class="text-muted form-cont">Start Date</label>
            <input type="date" asp-for="DateStart" value="@DateTime.Today.ToString()"/>
            </div>
    
            <div class="form-group mb-3 d-flex flex-column">
                <label asp-for="DateFinish" class="text-muted">Finish Date</label>
            <input type="date" asp-for="DateFinish" value="@DateTime.Today.AddDays(1).ToString()" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Add Board</button>

    </form>
</div>