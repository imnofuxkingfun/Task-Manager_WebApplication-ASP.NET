@model outDO.Models.Task
<h1>Add task</h1>
<div class="d-flex justify-content-center">
    <form asp-controller="Task" asp-action="Edit"
          class="col-6 bg-light p-3 rounded">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <input type="hidden" asp-for="Id" value="@ViewBag.Task.Id" />
        <input type="hidden" asp-for="BoardId" value="@ViewBag.Task.BoardId" />
        <input type="hidden" asp-for="Status" value="@ViewBag.Task.Status" />

        <div class="form-floating mb-3">
            <input asp-for="Title" placeholder="Task Title" class="form-control" value="@ViewBag.Task.Title"/>
            <label asp-for="Title">Task Title</label>
        </div>

        <div class="form-floating mb-3 ">
            <textarea asp-for="Description" placeholder="Description" class="form-control" value="@ViewBag.Task.Description"></textarea>
            <label asp-for="Description">Description</label>
        </div>
        <div class="form-group d-flex justify-content-around mb-3">
            <div class="d-inline-block">
                <label asp-for="DateStart" class="text-muted form-cont">Start Date</label>
                <input type="date" asp-for="DateStart" value="@ViewBag.Task.DateStart.ToString("yyyy-MM-dd")" />
            </div>

            <div class="d-inline-block">
                <label asp-for="DateFinish" class="text-muted">Finish Date</label>
                <input type="date" asp-for="DateFinish" value="@ViewBag.Task.DateFinish.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Edit Task</button>

    </form>
</div>